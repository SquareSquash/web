$(document).ready(function() {
  new MemberPanel($('#members'),
                  "<%= escape_javascript @project.name %>",
                  "<%= @project.to_param %>",
                  "<%= users_url %>",
                  "<%= project_memberships_url(@project, format: 'json') %>",
                  "<%= project_membership_url(@project, 'USERID', format: 'json') %>",
                  "<%= project_url(@project, format: 'json') %>",
                  "<%= current_user.role(@project).to_s %>",
                  false);

  $('#insert-prefab').click(function() {
    var lines;
    var prefabMenu = $('#prefab');

    switch(prefabMenu.val()) {
      case 'rails':
        lines = ["vendor/"];
        break;
      default: lines = [];
    }

    if (lines)
      $('#project_filter_paths_string').val(($('#project_filter_paths_string').val() + "\n" + lines.join("\n")).replace(/^\n/, ''));

    prefabMenu.val('');

    return false;
  });


  loadBeetilProjects = function() {
    var dropdown = $('#beetil-projects');
    $.ajax("<%= beetil_projects_url(format: 'json') %>", {
      type: 'GET',
      success: function(projects) {
        $('<option/>').attr('selected', 'selected').appendTo(dropdown);
        $.each(projects, function(_, project) {
          $('<option/>').attr('value', project.id).text(project.name).appendTo(dropdown);
        });

        dropdown.change(function() {
          $('#project_beetil_service_key').val(dropdown.val());
        });
        dropdown.removeAttr('disabled');
      },
      error: function() { new Flash('alert').text("Couldnâ€™t load the list of Beetil projects."); }
    });
  };
  loadBeetilProjects();
});
