<% unless Squash::Ruby.configuration :disabled %>
    # first the settings imported from the ruby client
    SquashJavascript.instance().configure
        APIHost: "<%= Squash::Ruby.configuration(:api_host) %>"
        APIKey: "<%= Squash::Ruby.configuration(:api_key) %>"
        notifyPath: "<%= Squash::Ruby.configuration :notify_path %>"
        environment: "<%= Rails.env %>"
        revision: "<%= Squash::Ruby.current_revision %>"

    # then the JavaScript-specific overrides
    SquashJavascript.instance().configure <%= Squash::Configuration.javascript_dogfood.to_json %>
<% end %>
